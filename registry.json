      "features": [
        "smooth-animations",
        "focus-ring", 
        "disabled-state",
        "accessible",
        "dark-mode",
        "client-component"
      ]
    },
    "textarea": {
      "name": "Textarea",
      "description": "Textarea component with variants, labels, and helper text",
