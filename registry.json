      "files": [
        {
          "name": "textarea.tsx",
          "path": "app/components/ui/textarea/textarea.tsx",
          "type": "component"
        }
      ],
      "dependencies": {
        "react": "^18.0.0"
      },
      "exports": ["Textarea"],
      "props": {
