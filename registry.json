  "categories": {
    "form": {
      "name": "Form",
      "description": "Form input and control components",
      "components": ["button", "checkbox", "input", "select", "switch", "textarea"]
    },
    "data-display": {
      "name": "Data Display",
      "description": "Components for displaying data and content",
      "components": ["avatar", "badge"]
    },
    "feedback": {
      "name": "Feedback", 
      "description": "Components for user feedback and notifications",
      "components": ["alert"]
    },
    "layout": {
      "name": "Layout",
      "description": "Components for page and content layout",
      "components": ["card"]
    },
    "overlay": {
      "name": "Overlay",
      "description": "Components that overlay content",
      "components": ["dialog", "tooltip"]
    }
  },
  "features": [
    "TypeScript support",
    "Tailwind CSS styling",
    "Dark mode support", 
    "Accessibility focused",
    "Composable components",
    "Custom variants",
    "Responsive design",
    "Animation support",
    "Zero external dependencies (except React)",
    "Tree-shakeable"
  ],
  "requirements": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@types/react": "^18.0.0",
    "tailwindcss": "^3.0.0"
  },
  "tailwindConfig": {
    "darkMode": "class",
    "content": [
      "./app/**/*.{js,ts,jsx,tsx,mdx}",
      "./registry/**/*.{js,ts,jsx,tsx,mdx}"
    ],
    "theme": {
      "extend": {
        "colors": {
          "neutral": "Colors from neutral palette"
        },
        "animation": {
          "Custom animations for components": ""
        }
      }
    }
  }
} 