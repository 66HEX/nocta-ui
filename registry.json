      "sizes": ["sm", "md", "lg"],
      "features": [
        "controlled-uncontrolled",
        "keyboard-navigation",
        "click-outside-close",
        "animations",
        "custom-styling",
        "composable",
        "disabled-state",
        "dark-mode",
        "client-component"
      ]
    },
