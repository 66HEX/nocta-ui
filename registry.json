      "props": {
        "Tooltip": ["children", "open", "onOpenChange", "delayDuration"],
        "TooltipTrigger": ["children", "asChild", "className"],
        "TooltipContent": [
          "children", "className", "side", "align", "sideOffset", 
          "alignOffset", "arrowPadding", "showArrow"
