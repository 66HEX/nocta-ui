          "type": "component"
        }
      ],
      "dependencies": {
        "react": "^18.0.0"
      },
      "exports": [
        "Select",
        "SelectTrigger", 
        "SelectContent",
        "SelectItem",
        "SelectValue"
      ],
      "props": {
        "Select": ["value", "defaultValue", "onValueChange", "disabled", "children", "size"],
        "SelectTrigger": ["children", "className", "size"],
        "SelectContent": ["children", "className", "position"],
        "SelectItem": ["value", "children", "className", "disabled"],
        "SelectValue": ["placeholder", "className"]
