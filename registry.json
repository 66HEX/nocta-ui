      "files": [
        {
          "name": "switch.tsx",
          "path": "app/components/ui/switch/switch.tsx",
          "type": "component"
        }
      ],
      "dependencies": {
        "react": "^18.0.0"
      },
      "exports": ["Switch"],
      "props": {
        "Switch": ["checked", "onCheckedChange", "size", "variant", "disabled", "className", "id"]
